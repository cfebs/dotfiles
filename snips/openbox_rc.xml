<keybind key="W-r">
  <action name="Execute">
    <startupnotify>
      <enabled>true</enabled>
      <name>dmenu</name>
    </startupnotify>
    <command>dmenu_run -l 10 -fn '-misc-fixed-medium-r-normal--18-*-*-*-*-*-*-*'</command>
  </action>
</keybind>
<keybind key="W-p">
  <action name="Execute">
    <startupnotify>
      <enabled>true</enabled>
      <name>display</name>
    </startupnotify>
    <command>xfce4-display-settings -m</command>
  </action>
</keybind>
<keybind key="W-t">
  <action name="Execute">
    <startupnotify>
      <enabled>true</enabled>
      <name>display</name>
    </startupnotify>
    <command>
      <execute>x-terminal-emulator</execute>
    </command>
  </action>
</keybind>
<keybind key="W-w">
  <action name="Execute">
    <startupnotify>
      <enabled>true</enabled>
      <name>display</name>
    </startupnotify>
    <command>
      <execute>sensible-browser</execute>
    </command>
  </action>
</keybind>
<keybind key="W-f">
  <action name="Execute">
    <startupnotify>
      <enabled>true</enabled>
      <name>display</name>
    </startupnotify>
    <command>
      <execute>thunar</execute>
    </command>
  </action>
</keybind>

<keybind key="W-A-h">
    <!-- half left -->
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>0</x>
      <y>0</y>
      <width>50%</width>
      <height>100%</height>
    </action>
</keybind>

<keybind key="W-A-l">
    <!-- half right -->
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>50%</x>
      <y>0</y>
      <width>50%</width>
      <height>100%</height>
    </action>
</keybind>

<keybind key="W-A-j">
    <!-- half down -->
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>0</x>
      <y>50%</y>
      <width>100%</width>
      <height>50%%</height>
    </action>
</keybind>

<keybind key="W-A-k">
    <!-- half up -->
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>0</x>
      <y>0</y>
      <width>100%</width>
      <height>50%%</height>
    </action>
</keybind>

<keybind key="C-A-l">
  <action name="Execute">
    <startupnotify>
      <enabled>true</enabled>
      <name>lockscreen</name>
    </startupnotify>
    <command>xflock4</command>
  </action>
</keybind>

<keybind key="W-A-z">
    <action name="Decorate"/>
</keybind>
<keybind key="W-A-x">
    <action name="Undecorate"/>
</keybind>

